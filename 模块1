#!/usr/bin/env python3
import rclpy
from rclpy.node import Node
from std_msgs.msg import String

# 定义ROS 2订阅节点类
class DifyRos2SubscriberNode(Node):
    def __init__(self):
        # 初始化节点
        super().__init__("dify_ros2_humble_subscriber_node")
        # 创建订阅者：订阅/dify_ros2_command话题，指定回调函数
        self.subscription = self.create_subscription(
            String,
            "/dify_ros2_command",
            self.dify_command_callback,
            10
        )
        self.subscription  # 抑制未使用变量警告
        self.get_logger().info("ROS 2订阅节点已启动，等待接收命令...")

    def dify_command_callback(self, msg):
        """话题回调函数：接收并打印命令"""
        self.get_logger().info(f"ROS 2订阅节点已接收命令：{msg.data}")

def main(args=None):
    # 初始化rclpy
    rclpy.init(args=args)
    # 创建订阅节点实例
    subscriber_node = DifyRos2SubscriberNode()
    # 保持节点运行
    rclpy.spin(subscriber_node)
    # 关闭节点，释放资源
    subscriber_node.destroy_node()
    rclpy.shutdown()

if __name__ == "__main__":
    main()
