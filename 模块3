#!/usr/bin/env python3
import rclpy
from rclpy.node import Node
from std_msgs.msg import String
from geometry_msgs.msg import Twist

class TurtleController(Node):
    def __init__(self):
        super().__init__('turtle_dify_controller')
        
        # è®¢é˜…ä¸­é—´ä»¶è¯é¢˜
        self.command_sub = self.create_subscription(
            String,
            '/dify_ros2_command',
            self.command_callback,
            10
        )
        
        # åˆ›å»ºå°ä¹Œé¾Ÿæ§åˆ¶å‘å¸ƒè€…ï¼ˆå˜é‡åç»Ÿä¸€ä¸ºvel_publisherï¼‰
        self.vel_publisher = self.create_publisher(
            Twist,
            '/turtle1/cmd_vel',
            10
        )
        
        self.get_logger().info("âœ… å°ä¹Œé¾Ÿæ§åˆ¶èŠ‚ç‚¹å·²å¯åŠ¨ï¼")

    def command_callback(self, msg):
        raw_cmd = msg.data.strip()
        clean_cmd = raw_cmd.strip("{}()[]\"'").strip()
        self.get_logger().info(f"ğŸ“¥ æ”¶åˆ°åŸå§‹å‘½ä»¤ï¼š{raw_cmd}")
        self.get_logger().info(f"ğŸ§¹ æ¸…ç†åå‘½ä»¤ï¼š{clean_cmd}")

        twist = Twist()

        if clean_cmd == "move forward":
            twist.linear.x = 2.0
            twist.angular.z = 0.0
            self.get_logger().info("ğŸš€ æ‰§è¡Œï¼šå‘å‰ç§»åŠ¨")
        elif clean_cmd == "turn right":
            twist.linear.x = 0.0
            twist.angular.z = -1.5
            self.get_logger().info("ğŸ”„ æ‰§è¡Œï¼šå‘å³è½¬")
        elif clean_cmd == "turn left":
            twist.linear.x = 0.0
            twist.angular.z = 1.5
            self.get_logger().info("ğŸ”„ æ‰§è¡Œï¼šå‘å·¦è½¬")
        elif clean_cmd == "move backward":
            twist.linear.x = -2.0
            twist.angular.z = 0.0
            self.get_logger().info("â¬…ï¸ æ‰§è¡Œï¼šå‘åç§»åŠ¨")
        elif clean_cmd == "stop":
            twist.linear.x = 0.0
            twist.angular.z = 0.0
            self.get_logger().info("ğŸ›‘ æ‰§è¡Œï¼šåœæ­¢è¿åŠ¨")
        else:
            self.get_logger().warn(f"âŒ æœªçŸ¥å‘½ä»¤ï¼š{clean_cmd}")
            return

        # å‘å¸ƒæŒ‡ä»¤ï¼ˆå˜é‡åç»Ÿä¸€ä¸ºvel_publisherï¼‰
        self.vel_publisher.publish(twist)
        self.get_logger().info("âœ… è¿åŠ¨æŒ‡ä»¤å·²å‘é€ç»™å°ä¹Œé¾Ÿï¼")

def main(args=None):
    rclpy.init(args=args)
    turtle_node = TurtleController()
    rclpy.spin(turtle_node)
    turtle_node.destroy_node()
    rclpy.shutdown()

if __name__ == '__main__':
    main()
